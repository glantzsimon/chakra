@using K9.WebApplication.Helpers
@model K9.WebApplication.Models.ChakraCodesModel
@{
    Layout = "../Shared/_LayoutFormWide.cshtml";
}

<div class="container main-content">
    <div class="well margin-bottom-0">
        <article>
            <h2 class="text-center">Chakra Codes</h2>

            <div class="row">
                <div class="col-md-3 col-sm-3 padding-0">
                    @Html.Partial("_Calculator")
                </div>
                <div class="col-md-9 col-sm-9 padding-left-20-desktop padding-right-0">
                    @if (Model?.IsProcessed == true)
                    {
                        <div class="row">
                            <div class="col-md-3 col-xs-12">
                                <h3>Dominant:</h3>
                                <div class="chakra-code dominant" style="background-color: @Model.Dominant.Colour.ToLower();">
                                    @Model.Dominant.Name
                                </div>
                            </div>
                        </div>
                    }
                </div>
        </article>
    </div>
</div>


