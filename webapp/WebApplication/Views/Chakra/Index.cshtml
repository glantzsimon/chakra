@using K9.WebApplication.Helpers
@model K9.WebApplication.Models.ChakraCodesModel
@{
    Layout = "../Shared/_LayoutFormWide.cshtml";
}

<div class="container main-content">
    <div class="well margin-bottom-0">
        <article>
            <h2 class="text-center">Chakra Codes</h2>

            <br />

            <div class="chakra-image-container">
                <img class="chakra-image" src="~/Images/chakracodes/chakra-person.jpg" />
            </div>

            <div class="row">
                <div class="col-sm-3 col-xs-12 padding-0">
                    @Html.Partial("_Calculator")
                </div>
                <div class="col-sm-9 col-xs-12 padding-left-20-desktop padding-right-0">
                    @if (Model?.IsProcessed == true)
                    {
                        <div class="well">
                            <div class="row">
                                <div class="col-xs-4">
                                    @Html.Partial("_ChakraCode", Model.Dominant)
                                </div>
                                <div class="col-xs-8">
                                    <div class="col-xs-4">
                                        @Html.Partial("_ChakraCode", Model.SubDominant)
                                    </div>
                                    <div class="col-xs-4">
                                        @Html.Partial("_ChakraCode", Model.Guide)
                                    </div>
                                    <div class="col-xs-4">
                                        @Html.Partial("_ChakraCode", Model.Gift)
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-4"></div>
                                <div class="col-xs-8">
                                    @Html.Partial("_ChakraCodesTimeline", Model)
                                </div>
                            </div>
                        </div>
                    }
                </div>
        </article>
    </div>
</div>


