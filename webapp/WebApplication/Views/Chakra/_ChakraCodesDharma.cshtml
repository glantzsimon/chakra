@model K9.WebApplication.Models.ChakraCodesModel

<div class="well">
    <div class="row">
        <div class="col-xs-2">
            <strong>Age</strong>
        </div>
        <div class="col-xs-2">
            <strong>Year</strong>
        </div>
        <div class="col-xs-2">
            <strong>Chakra Code</strong>
        </div>
        <div class="col-xs-2">
            <strong>Dharmic Chakra Code</strong>
        </div>
        <div class="col-xs-2">
            <strong>Dharmic Chakra Code Group</strong>
        </div>
    </div>
    @{
        var group = Model.FirstDharmaCode.DharmaGroupChakraCodeNumber;

        foreach (var code in Model.DharmaCodes)
        {
            if (code.DharmaGroupChakraCodeNumber != group)
            {
                <br />
                <hr />
                group = code.DharmaGroupChakraCodeNumber;
            }

            <div class="row">
                <div class="col-xs-2">
                    @code.Age
                </div>
                <div class="col-xs-2">
                    @code.Year
                </div>
                <div class="col-xs-2">
                    @code.ChakraCodeNumber
                </div>
                <div class="col-xs-2">
                    @code.DharmaChakraBaseCodeNumber / @code.DharmaChakraCodeNumber
                </div>
                <div class="col-xs-2">
                    @code.DharmaGroupChakraCodeNumber
                </div>
            </div>
        }
    }
</div>